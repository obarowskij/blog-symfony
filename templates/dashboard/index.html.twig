{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
{%if app.user %}
You are logged in as: {{user.email}}
{%endif%}
<ul>
    {% for post in posts%}
    <a href="{{ path('post_show', {id: post.id}) }}">
    <li>
        <h2>{{ post.title }}</h2>
        <p>{{ post.content }}</p>
        </li>
    </a>
    {% endfor %}
</ul>
{% endblock %}
